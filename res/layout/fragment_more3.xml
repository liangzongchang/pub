            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp" android:background="@drawable/selector_click_touming"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/icon_more_idcard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="商家加盟"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/devider_main" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/wodeliwu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp" android:background="@drawable/selector_click_touming"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/icon_more_gift" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我的礼物"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_main" />

        <LinearLayout
            android:id="@+id/jifenshangcheng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp" android:background="@drawable/selector_click_touming"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/jifen" />

            <TextView
                android:layout_width="wrap_content"
